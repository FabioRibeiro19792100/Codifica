{
  "version": 2,
  "builds": [
    {
      "src": "codifica-react/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "cd codifica-react && npm install && npm run build",
  "outputDirectory": "codifica-react/dist",
  "installCommand": "cd codifica-react && npm install",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
